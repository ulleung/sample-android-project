<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한글로 만든 샘플 앱"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.071"
            app:layout_constraintBottom_toTopOf="@+id/입력창" android:id="@+id/텍스트"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/입력창"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="564dp" android:hint="암호화할 내용"/>
    <Button
            android:text="암호화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/버튼" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="460dp"
            android:onClick="클릭시" tools:ignore="OnClick"/>
    <TextView
            android:text="결과가 여기에 표시됩니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/결과"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.536"
            android:layout_marginBottom="340dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>